{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "clang build active file",
          "type": "shell",
          "command": "/usr/bin/clang",
          "args": [
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": [
              "$gcc"
          ],
          "detail": "Compiler task configured for using Clang."
      }
  ]
}
